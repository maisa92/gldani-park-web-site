@model IEnumerable<GldaniParkService.Models.ReportModels.AttractionRankResponse>

@{
    ViewBag.Title = "AttractionRank";
}

<h2>AttractionRank</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        <div class="col-md-5">
            <div class="col-md-4">
                @Html.Label("დაწყების თარიღი", htmlAttributes: new { @class = "control-label col-md-2" })
            </div>
            <div class="col-md-8">
                @Html.Editor(DateTime.Now.ToString(), new { htmlAttributes = new { Name = "StartDate", @class = "form-control datepicker", Value = ViewBag.StartDate.ToString("yyyy-MM-dd") } })
            </div>
        </div>

        <div class="col-md-5">
            <div class="col-md-4">
                @Html.Label("დასრულების თარიღი", htmlAttributes: new { @class = "control-label col-md-2" })
            </div>
            <div class="col-md-8">
                @Html.Editor(DateTime.Now.ToString(), new { htmlAttributes = new { Name = "EndDate", @class = "form-control datepicker", Value = ViewBag.EndDate.ToString("yyyy-MM-dd") } })
            </div>
        </div>
        <div class="col-md-2">
            <div class="col-md-8">
                @Html.Label("აქტიური ბარათები", htmlAttributes: new { @class = "control-label col-md-2" })
            </div>
            <div class="col-md-4">
                @{
                    string activeAttraction = ViewBag.ActiveAttraction.ToString();
                }
                @Html.DisplayName(activeAttraction)
            </div>
        </div>
    </div>

    
    <div></div>
    <br />

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
            </tr>
        }

    </table>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Enter" class="btn btn-default" />
        </div>
    </div>
}
<script type="text/javascript">
    $(function () {
        $('.datepicker').datetimepicker({
            format: "YYYY-MM-DD"
        });
    });


</script>
